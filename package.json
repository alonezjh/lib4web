    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.1",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
